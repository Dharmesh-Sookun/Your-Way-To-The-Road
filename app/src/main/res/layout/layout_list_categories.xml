<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/parent_layout">

    <ImageView
        android:id="@+id/categoryImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="sign images"
        tools:srcCompat="@tools:sample/avatars[0]"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ImgDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_toEndOf="@id/categoryImg"
        android:fontFamily="@font/roboto_light"
        android:text="sign description"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/ImgDescTextView"
        android:layout_marginTop="100dp"
        android:contentDescription="sign images"
        app:srcCompat="@android:color/background_light" />

    <ImageButton
        android:id="@+id/toSpeechBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImgDescTextView"
        android:layout_marginStart="100dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@id/categoryImg"
        android:background="@drawable/ic_volume_up"
        android:contentDescription="todo"
        app:srcCompat="@drawable/ic_volume_up" />

</RelativeLayout>